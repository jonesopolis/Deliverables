
<h1 class="text-center">Trucks</h1>

<div class="well row">

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody id="truck-list"></tbody>
    </table>

    <div class="row">
        <div class="col-md-4">
            <button class="col-md-10 col-md-push-1 btn btn-lg red" onclick="trucksVm.addRedTruck()">+ Red</button>
        </div>
        <div class="col-md-4">
            <button class="col-md-10 col-md-push-1 btn btn-lg blue" onclick="trucksVm.addBlueTruck()">+ Blue</button>
        </div>
        <div class="col-md-4">
            <button class="col-md-10 col-md-push-1 btn btn-lg gray" data-toggle="modal" data-target="#custom-truck-modal">+ Custom</button>
        </div>
    </div>
</div>


<div id="custom-truck-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Custom Truck</h4>
            </div>
            <div class="modal-body">
                <label>Name:</label>
                <input type="text" class="form-control" id="custom-truck-name" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="trucksVm.addCustomTruck($('#custom-truck-name').val())" data-dismiss="modal" id="add-custom-truck" disabled>Add Custom Truck</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>

    </div>
</div>
